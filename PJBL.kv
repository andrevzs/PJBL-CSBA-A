
<Bichomon>
    orientation: 'vertical'
    Label:
        text: "~ BICHOMON ~"
        font_size: 32
        background_color: (29/255, 53/255, 87/255, 1)
        canvas.before:
			Color:
				rgba: self.background_color
			Rectangle:
				size: self.size
				pos: self.pos
        color: (241/255, 250/255, 238/255, 1)
		bold: True
    Spinner:
        id: escolhernv
        text: 'Nível'
        values: ['Fácil', 'Difícil']
        on_text: root.dificuldade_spinner(escolhernv.text)
    GridLayout:
        cols: 3
        Label: 
            text: "Nome do Personagem:"
            color: 69/255, 123/255, 157/255, 1
            italic: True
            background_color: 168/255, 218/255, 220/255, 1
            canvas.before:
			    Color:
				    rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos
        TextInput:
            id: Nome
            hint_text: "Escreva aqui o nome de seu heroi"
        Button:
            text: "COMEÇAR"
            bold: True
            color: 69/255, 123/255, 157/255, 1
            on_release: root.botão_começar()
            background_normal: ''
            background_color: 168/255, 218/255, 220/255, 1
    BoxLayout:
        id: Historia 
        size_hint_y: None
        canvas:
            Color: 
                rgba: (69/255, 123/255, 157/255, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: hist
            text:"História"
            pos_hint: {"center_x": 1, "center_y": 0.5}
            italic: True
    BoxLayout:
        id: Dados 
        size_hint_y: 5
        canvas:
            Color: 
                rgba: 69/255, 123/255, 157/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 3
            Label:
                id: aliado
                text: ""
            Label:
                id: inicio-texto
                text:"Dados"
            Label:
                id: inimigo
                text: ""
    # BoxLayout:
        # id: Controles 
        # size_hint_y: 0.3
        # Label:
            # text:"Controle"
            # pos_hint: {"center_x": 1, "center_y": 0.5}
    GridLayout:
        cols: 2
        Button:
            id: Ataque
            text: "ATACAR"
            bold: True
            background_normal: ''
            background_color: (230/255, 57/255, 70/255, 1)
            on_release: root.ataque(), root.info()
            disabled: True
        Button:
            id: sorte
            text: "TENTAR UM CRÍTICO"
            color: 29/255, 53/255, 87/255, 1
            bold: True
            background_normal: ''
            background_color: (241/255, 250/255, 238/255, 1)
            on_release: root.sorte(), root.info()
            disabled: True
