<Bichomon>
    orientation: 'vertical'
    Label:
        text: "Bichomon"
    Spinner:
        id: escolhernv
        text: 'Nivel'
        values: ['facil', 'dificil']
        on_text: root.dificuldade_spinner(escolhernv.text)
    GridLayout:
        cols: 3
        Label: 
            text: "Nome do personagem"
        TextInput:
            id: Nome
            hint_text: "Escreva aqui o nome de seu heroi"
        Button:
            text: "Começar"
            on_release: root.botão_começar()
            background_normal: ''
            background_color: (0, 1, 0, .5)
    BoxLayout:
        id: Historia 
        size_hint_y: 3
        canvas:
            Color: 
                rgba: 1, 0, 0, .8
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: hist
            text:"historia"
            pos_hint: {"center_x": 1, "center_y": 0.5}
    BoxLayout:
        id: Dados 
        size_hint_y: 5
        canvas:
            Color: 
                rgba: 0, 0, 1, .5
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 3
            Label:
                id: aliado
                text: ""
            Label:
                id: inicio-texto
                text:"Dados personagem"
            Label:
                id: inimigo
                text: ""
    BoxLayout:
        id: Controles 
        size_hint_y: 0.3
        Label:
            text:"Controle"
            pos_hint: {"center_x": 1, "center_y": 0.5}
    GridLayout:
        cols: 2
        Button:
            id: Ataque
            text: "Atacar"
            background_normal: ''
            background_color: (1, 0, 0, .6)
            on_release: root.ataque(), root.info()
        Button:
            id: sorte
            text: "tentar a sorte"
            background_normal: ''
            background_color: (0, 0, 1, .6)
            on_release: root.sorte(), root.info()
